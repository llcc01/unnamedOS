    "version": "0.2.0",
    "configurations": [
        {
            "name": "kernel-debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/kernel/os.elf",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/src/kernel/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerServerAddress": "127.0.0.1:1234",
            "miDebuggerPath": "riscv64-unknown-elf-gdb",
        }
    ]
}